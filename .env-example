# database
DATABASE_PORT=5434
DATABASE_USER=openuem
DATABASE_PASSWORD=openuem
DATABASE_DB_NAME=openuem

# general
OPENUEM_DATABASE_URL="postgres://${DATABASE_USER}:${DATABASE_PASSWORD}@db:${DATABASE_PORT}/${DATABASE_DB_NAME}"
OPENUEM_ORGNAME="OpenUEM"
OPENUEM_ORGPROVINCE="Valladolid"
OPENUEM_ORGLOCALITY="Valladolid"
OPENUEM_ORGADDRESS=
OPENUEM_ORGCOUNTRY="ES"
